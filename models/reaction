const { Schema, model } = require('mongoose');


const reactionSchema = new Schema(
    {
        reactionBody: {
            type: String,
            maxlength: 280, 
        },
        createdAt:
        {
            type: Date,
            default: new Date(),
            get: formatDate,
        },
        username: [
            {
                type: String,
                required: true,
                ref: 'user',
            },
        ],
    },
    {
        toJSON:{
            virtuals: true,
        },
        id: false,
    }
);


function formatDate(date) {
    return date.toLocalString();
}

const Reactions = model('reactions', reactionSchema);

module.exports = Reactions;